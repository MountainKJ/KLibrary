<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.kj.klibrary.event.TouchEventFather
        android:id="@+id/touchEventFather"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.kj.klibrary.event.TouchEventChilds
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_margin="50dp"
            android:gravity="center"
            android:background="@color/colorPrimaryDark">
            <com.kj.klibrary.event.TouchEventChilds2
                android:id="@+id/activity_event_learn_tec2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="TouchEventChilds2"/>
        </com.kj.klibrary.event.TouchEventChilds>
    </com.kj.klibrary.event.TouchEventFather>

    <com.kj.klibrary.event.EventButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:text="EventButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.kj.klibrary.event.EventViewGroup
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>